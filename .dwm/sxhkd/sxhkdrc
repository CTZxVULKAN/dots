#################################################################
# quick bindings for applications
#################################################################

# terminal 
super + F1
    kitty ~

# file manager
super + F2
    pcmanfm -n ~

# browser
super + F3
    firefox

# browser-2
super + F4
    brave

# blutooth
super + F5
    blueman-manager

# volume control
super + F6	
    pavucontrol

# editor
super + F7
    leafpad



super + x
    rofi -display-drun "îž€" -modi drun -show drun -font "Hack 20" -icon-theme "Tela" -show-icons



